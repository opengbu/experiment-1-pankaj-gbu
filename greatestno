// to find the largest of three numbers


#include <iostream>
using namespace std;
int main()
{    
    float n1, n2, n3;
    cout<<"The value of n1 ";
    cin>>n1;
    
    cout<<"The value of n2";
    cin>>n2;
    
    cout<< "The value of n3 ";
    cin>>n3;
    
    if(n1 >= n2 && n1 >= n3)
    {
        cout << "Largest number: " << n1;
    }
    if(n2 >= n1 && n2 >= n3)
    {
        cout << "Largest number: " << n2;
    }
    if(n3 >= n1 && n3 >= n2) {
        cout << "Largest number: " << n3;
    }
    return 0;
}
